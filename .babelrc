{
    'presets': ['es2015-no-commonjs'],
    'plugins': [
        'transform-object-assign',
        'transform-object-rest-spread',
        ['transform-runtime', {
            'polyfill': false,
            'regenerator': true
        }]
    ],
    'sourceMaps': true,

    'env': {
        'bundle': {
            'plugins': [
                ['transform-runtime', {
                    'polyfill': true,
                    'regenerator': true
                }]
            ]
        },
        'cjs': {
            'plugins': [
                'add-module-exports',
                'transform-es2015-modules-commonjs',
            ]
        }
    }
}
